{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/configs": ["src/configs/index.ts"],
      "@/data/*": ["src/data/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/lib/*": ["src/lib/*"],
      "@/schemas": ["src/schemas/index.ts"],
      "@/styles/*": ["src/styles/*"],
      "@/t/*": ["src/i18n/*"],
      "@/utils": ["src/utils/index.ts"]
    }
  },
  "exclude": [".vscode", "dist", "node_modules"]
}
